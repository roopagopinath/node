/* GET My method to search items */
router.get('/search', function(req, res) {
    res.render('search', { title: 'Search Products' });
});



/* POST My method to search items */
router.get('/search', function(req, res) {

    // Set our internal DB variable
    var db = req.db;

    // Get our form values. These rely on the "name" attributes
    var productName = req.body.productName;

    // Set our collection
    var collection = db.get('Product');

    // Submit to the DB
    collection.find({name : 'TV'},{},function(e,docs){
        res.render('search', {
            "search" : docs
        });
    });
});


// Submit to the DB
    collection.find({
        "name" : productName,
    }, function (err, doc) {
        if (err) {
            // If it failed, return error
            res.send("There was a problem finding the information in the database.");
        }
        else {
            // If it worked, set the header so the address bar doesn't still say /adduser
            res.location("search");
            // And forward to success page
            res.redirect("search");
        }
    });
});
